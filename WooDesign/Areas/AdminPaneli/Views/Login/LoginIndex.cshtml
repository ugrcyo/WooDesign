<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Log in</title>
    <link rel="stylesheet" href="~/Areas/AdminPaneli/LTE/plugins/font-awesome/css/font-awesome.min.css">

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Areas/AdminPaneli/LTE/dist/js/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Areas/AdminPaneli/LTE/dist/js/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/App/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/AdminPaneli/LTE/dist/css/adminlte.min.css">
    <!-- iCheck -->
    <link href="~/Areas/AdminPaneli/LTE/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>Admin</b>LTE
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Oturum açmak için giriş yapınız</p>
            <form action="LoginIndex" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" name="adi" placeholder="Email ya da Kullanıcı Adı">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" name="sifre" placeholder="Şifre">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <p style="color:darkred;">
                    @ViewBag.mesaj
                </p>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label class="container">
                                <div class="icheckbox_square-blue"
                                     style="position: relative;" aria-checked="false" aria-disabled="false">
                                    <input type="checkbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255) none repeat scroll 0% 0%; border: 0px none; opacity: 0;">
                                    <ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255) none repeat scroll 0% 0%; border: 0px none; opacity: 0;">
                                    </ins>
                                </div> Beni Hatırla
                            </label>
                        </div>

                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                </div>
                <div class="col-xs-8">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Giriş</button>
                </div>
            </form>
            <div class="social-auth-links text-center">
                <p>- VEYA -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="nav-icon fa fa-facebook-square"></i> 
                    Facebook Hesabınla Bağlan
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus-square"></i>
                    Google Hesabınla Bağlan
                </a>
            </div>
            <!-- /.social-auth-links -->
            <a href="#">Şifremi Unuttum</a><br>
            <a href="register.html" class="text-center">Üye Ol</a>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/App/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Areas/AdminPaneli/LTE/dist/js/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Areas/AdminPaneli/LTE/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>

    <div></div>
</body>
</html>