@model IEnumerable<WooDesign.Models.Resimler>


<div class="row">
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="col-md-2">
                <img class="img-thumbnail" style="width:100%;height:200px;margin-top:5%;" src="~/Resimler/@item.Resim" alt="Alternate Text" />

                <div style="margin-top:0px;text-align:center;">

                    @Ajax.ActionLink("Sil", "ResimSil", new { silinecekResimId = item.ResimlerID }, new AjaxOptions { HttpMethod = "GET", Confirm = "Silmeyi onaylıyor musunuz", OnComplete = "ResimleriYenilejs" }, new { @class = "btn-sm btn-danger" })
                </div>
            </div>
        }
    }
    else
    {
        <h4 style="color:red">Ürünün resmi bulunmamaktadır</h4>
    }
</div>

