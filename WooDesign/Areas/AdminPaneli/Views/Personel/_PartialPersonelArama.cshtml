@*@model IPagedList<WooDesign.Models.Personeller>*@
@using PagedList;
@using PagedList.Mvc;
@model WooDesign.Areas.AdminPaneli.Models.PersonelPartial

<table class="table-hover container-fluid" style="width:95%">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Adi)*@
            ADI
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Soyadi)*@
            SOYADI
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Telefon)*@
            TELEFON
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Adres)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            E-MAİL
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Cinsiyet)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.MedeniHali)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DogumYeri)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DogumTarihi)*@
            D.TARİHİ
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.IseGirisTarihi)*@
            D.YERİ
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Yetkiler.YetkiAdi)*@
            YETKİ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Personel_Listesi)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Adres)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Cinsiyet)*@
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.MedeniHali)*@
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.DogumYeri)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DogumTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IseGirisTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yetkiler.YetkiAdi)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "PersonelGuncelle", new { guncelleId = item.PersonellerID }, new { @class = "btn-sm btn-info" })
                @Html.ActionLink("Detay", "PersonelDetay", new { detayId = item.PersonellerID }, new { @class = "btn-sm btn-warning" })
                @Html.ActionLink("Sil", "PersonelSil", new { silId = item.PersonellerID }, new { @class = "btn-sm btn-danger" })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model.Personel_Listesi, numara => Url.Action("PersonelListesi", "Personel",new RouteValueDictionary {
    { "Adi",Model.Adi},
    {"Soyadi",Model.Soyadi },
    {"SayfaNumarasi",numara}
}), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions{ UpdateTargetId = "dvpersonellistesi" }))
   
